<style>

/* calendar */
#calendar_nav {
    width: 100%;
    margin: 0 auto;
}

.nav_item {
    display: inline-block;
    vertical-align: top;
 }

#calendar{
    background-color: #fff;
    height: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    margin-left: 8px;
    margin: 40px 0 0;
   /* padding: 10px 0; */
    border: #dadce0 1px solid;
}
#calendar .calendar_head{
    margin: 0;
    -webkit-align-items: stretch;
    align-items: stretch;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-flex: none;
    -webkit-flex: none;
    flex: none;
    height: 30px;
}

#calendar .calendar_head span {
    padding-top:5px;
    display:block;
}
#calendar .calendar_head div {
    border-right: #dadce0 1px solid;
    -webkit-box-flex: 1 1 0%;
    -webkit-flex: 1 1 0%;
    flex: 1 1 0%;
    text-align: center;
    font-family: Roboto,Arial,sans-serif;
    text-transform: uppercase;
}
.Bd2qQe {
    margin: 0;
    overflow: hidden;
    -webkit-box-flex: 1 1 0%;
    -webkit-flex: 1 1 0%;
    flex: 1 1 0%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    border-top: #dadce0 1px solid;
    flex-direction: column;
}
.QIadxc {
    position: relative;
    overflow: hidden;
    border-bottom: #dadce0 1px solid;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-flex: 1 1 0%;
    -webkit-flex: 1 1 0%;
    flex: 1 1 0%;
}
.gGDF0e {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.t8qpF {
    font-size: 14px;
    line-height: 30px;
    border-right: #dadce0 1px solid;
    color: #70757a;
    -webkit-box-flex: 1 1 0%;
    -webkit-flex: 1 1 0%;
    flex: 1 1 0%;
}
</style>

{{>layout/header}}
<div id="wrap">
    {{>layout/sidebar}}
    <section class="content">

        <div id="calendar_nav">
            <div class="nav_item"><button onclick="location.href='/calendar'">오늘</button></div>
            <div class="nav_item"><button onclick="location.href='/calendar/month/{{year}}/{{month}}/prev'">◁</button></div>
            <div class="nav_item"><button onclick="location.href='/calendar/month/{{year}}/{{month}}/next'">▷</button></div>
            <div class="nav_item"><span id="cal-nav-year">{{year}}년</span> <span id="cal-nav_month">{{month}}월</span></div>
            <div class="nav_item" style="float: right;">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"  style="padding-left:10px;">
                            보기
                        </button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                            <a class="dropdown-item" href="#">Dropdown link</a>
                            <a class="dropdown-item" href="#">Dropdown link</a>
                        </div>
                        <button id="btnGroupDrop2" type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            월
                        </button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop2">
                            <a class="dropdown-item" href="#">Dropdown link</a>
                            <a class="dropdown-item" href="#">Dropdown link</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div role="grid" id="calendar">
            <div role="row" class="calendar_head">
                <div role="columnheader">
                    <span>일요일</span>
                </div>
                <div role="columnheader">
                    <span>월요일</span>
                </div>
                <div role="columnheader">
                    <span>화요일</span>
                </div>
                <div role="columnheader">
                    <span>수요일</span>
                </div>
                <div role="columnheader">
                    <span>목요일</span>
                </div>
                <div role="columnheader">
                    <span>금요일</span>
                </div>
                <div role="columnheader">
                    <span>토요일</span>
                </div>
            </div>
            <div role="presentation" class="Bd2qQe">
                <div role="row" class="QIadxc">
                    <div aria-hidden="true" class="gGDF0e">
                    {{#calendar}}
                        <div class="t8qpF" data-target="#exampleModal" data-whatever="{{day}}" data-toggle="modal">
                            <span>{{day}}</span>
                        </div>
                    {{^br}}
                    </div>
                </div>
                <div role="row" class="QIadxc">
                    <div aria-hidden="true" class="gGDF0e">
                    {{/br}}
                    {{/calendar}}

                </div>
        </div>
    </section>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Recipient:</label>
                        <input type="text" class="form-control" id="recipient-name">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Message:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send message</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(init);

	function init()
	{
		$('#exampleModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) // Button that triggered the modal
            var recipient = button.data('whatever') // Extract info from data-* attributes
            // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
            // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
            var modal = $(this)
            modal.find('.modal-title').text('일정 ' + recipient)
            modal.find('.modal-body input').val(recipient)
        })
    }
</script>
{{>layout/footer}}